<section>
  <div class="container">
    <div class="row">
    <a href = "/admin/add-product/" class = "btn btn-success ml-auto">Add Product</a>
  </div>
  </div>
  <table class="table mt-5">
    <thead>
      <tr>
        <th scope="col">No</th>
        <th scope="col">Name</th>
        <th scope="col">Category</th>
        <th scope="col">Price</th>
        <th>Image</th>

      </tr>
    </thead>
    <tbody>
      {{#each products}}
      <tr>
        <th scope="row">1</th>
        <td>{{this.name}}</td>
        <td>{{this.category}}</td>
        <td>{{this.price}}</td>
        <td><img style="width: 50px; height:50px" src = "{{this.image}}"></td>
      </tr>
      {{/each}}
    </tbody>
  </table>
</section>